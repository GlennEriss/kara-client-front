rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function pour vérifier si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function pour vérifier si l'utilisateur est admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.role in ['Admin', 'SuperAdmin'];
    }
    
    // Note: Chaque environnement (dev, preprod, prod) utilise sa propre base de données Firebase,
    // donc les noms de collections sont identiques dans tous les environnements.
    // Pas besoin de gérer des suffixes -dev, -preprod, etc.
    
    // ==========================================
    // COLLECTIONS GÉOGRAPHIQUES
    // ==========================================
    
    // Provinces
    match /provinces/{provinceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Départements
    match /departments/{departmentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Communes
    match /communes/{communeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Arrondissements
    match /districts/{districtId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Quartiers
    match /quarters/{quarterId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ==========================================
    // COLLECTIONS UTILISATEURS
    // ==========================================
    
    // Utilisateurs
    match /users/{userId} {
      // Permettre la lecture pour vérifier l'existence lors de la connexion
      // et pour les utilisateurs authentifiés
      allow read: if true; // Permettre la lecture publique pour la connexion
      allow write: if isAdmin();
    }
    
    // Membres
    match /members/{memberId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ==========================================
    // AUTRES COLLECTIONS (ajoutez selon vos besoins)
    // ==========================================
    
    // Pour le développement : Autoriser tout si l'utilisateur est authentifié
    // ATTENTION: À adapter selon vos besoins de sécurité en production
    match /{document=**} {
      allow read, write: if false; // Par défaut, refuser tout accès non explicitement autorisé
    }
  }
}
