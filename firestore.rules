rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // FONCTIONS UTILITAIRES
    // ==========================================
    
    // Vérifie si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Vérifie si l'utilisateur est admin (Admin, SuperAdmin ou Secretary)
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.role in ['Admin', 'SuperAdmin', 'Secretary'];
    }
    
    // Vérifie si le code de sécurité est valide pour modification par le demandeur
    function hasValidSecurityCode(requestData) {
      return requestData.securityCode != null &&
             requestData.securityCodeExpiry != null &&
             requestData.get('securityCodeUsed', false) == false &&
             request.time < requestData.securityCodeExpiry;
    }
    
    // Note: Chaque environnement (dev, preprod, prod) utilise sa propre base de données Firebase,
    // donc les noms de collections sont identiques dans tous les environnements.
    
    // ==========================================
    // COLLECTIONS GÉOGRAPHIQUES
    // ==========================================
    // Lecture publique pour permettre le remplissage du formulaire d'inscription
    // Écriture réservée aux admins
    
    match /provinces/{provinceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /departments/{departmentId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /communes/{communeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /districts/{districtId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /quarters/{quarterId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ==========================================
    // UTILISATEURS (USERS)
    // ==========================================
    
    match /users/{userId} {
      // Lecture : Publique (nécessaire pour la connexion)
      allow read: if true;
      // Écriture : Admin uniquement (création lors de l'approbation)
      allow write: if isAdmin();
    }
    
    // ==========================================
    // MEMBRES (MEMBERS)
    // ==========================================
    
    match /members/{memberId} {
      // Lecture : Authentifié (pour afficher les informations des membres)
      allow read: if isAuthenticated();
      // Écriture : Admin uniquement
      allow write: if isAdmin();
    }
    
    // ==========================================
    // DEMANDES D'ADHÉSION (MEMBERSHIP REQUESTS)
    // ==========================================
    
    match /membership-requests/{requestId} {
      
      // LECTURE : Publique (nécessaire pour les corrections via code de sécurité)
      // La sécurité est gérée côté application via le code de sécurité
      allow read: if true;
      
      // CRÉATION : Publique avec validation des champs requis
      allow create: if 
        // Champs obligatoires présents
        request.resource.data.keys().hasAll([
          'matricule', 
          'status', 
          'identity', 
          'address', 
          'documents',
          'createdAt'
        ]) &&
        // Statut initial doit être 'pending'
        request.resource.data.status == 'pending' &&
        // Identity doit avoir les champs requis
        request.resource.data.identity.keys().hasAll([
          'firstName', 
          'lastName', 
          'birthDate',
          'nationality'
        ]) &&
        // Pas de tentative de se définir comme payé ou approuvé
        request.resource.data.get('isPaid', false) == false &&
        request.resource.data.get('processedBy', null) == null;
      
      // MISE À JOUR : Admin ou demandeur avec code de sécurité valide
      allow update: if isAdmin() || (
        // Cas 1: Demandeur authentifié avec email correspondant et code de sécurité valide
        (isAuthenticated() &&
         resource.data.identity.email == request.auth.token.email &&
         hasValidSecurityCode(resource.data) &&
         // Ne peut pas modifier ces champs protégés
         request.resource.data.matricule == resource.data.matricule &&
         request.resource.data.status == resource.data.status &&
         request.resource.data.get('isPaid', false) == resource.data.get('isPaid', false) &&
         // Doit marquer le code comme utilisé
         request.resource.data.securityCodeUsed == true)
        ||
        // Cas 2: Demandeur non authentifié soumettant des corrections (via code de sécurité)
        // Vérification que :
        // - Le statut passe de 'under_review' à 'pending' (soumission corrections)
        // - Le code est marqué comme utilisé
        // - Le code et reviewNote sont nettoyés
        // - Le statut actuel est 'under_review' avec code non utilisé
        (resource.data.status == 'under_review' &&
         resource.data.get('securityCodeUsed', false) == false &&
         request.resource.data.status == 'pending' &&
         request.resource.data.securityCodeUsed == true &&
         (!('securityCode' in request.resource.data) || request.resource.data.securityCode == null) &&
         (!('reviewNote' in request.resource.data) || request.resource.data.reviewNote == null) &&
         // Ne peut pas modifier ces champs protégés
         request.resource.data.matricule == resource.data.matricule &&
         request.resource.data.get('isPaid', false) == resource.data.get('isPaid', false))
      );
      
      // SUPPRESSION : Admin uniquement
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // COLLECTION ADMINS
    // ==========================================
    // Lecture publique pour permettre la vérification d'unicité du matricule
    // Écriture réservée aux SuperAdmins
    
    match /admins/{adminId} {
      // Lecture publique (nécessaire pour vérifier l'unicité du matricule)
      allow read: if true;
      // Écriture réservée aux SuperAdmins
      allow write: if isAuthenticated() && request.auth.token.role == 'SuperAdmin';
    }
    
    // ==========================================
    // ABONNEMENTS (SUBSCRIPTIONS)
    // ==========================================
    
    match /subscriptions/{subscriptionId} {
      // Lecture : Admin ou propriétaire
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      // Écriture : Admin uniquement
      allow write: if isAdmin();
    }
    
    // ==========================================
    // DOCUMENTS ARCHIVÉS
    // ==========================================
    
    match /documents/{documentId} {
      // Lecture : Admin ou propriétaire (via memberId)
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.memberId == request.auth.uid);
      // Écriture : Admin uniquement
      allow write: if isAdmin();
    }
    
    // ==========================================
    // NOTIFICATIONS
    // ==========================================
    
    match /notifications/{notificationId} {
      // Lecture : Authentifié
      allow read: if isAuthenticated();
      // Création : Admin uniquement
      allow create: if isAdmin();
      // Mise à jour : Admin ou propriétaire (pour marquer comme lu uniquement)
      allow update: if isAdmin() || (
        isAuthenticated() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isRead', 'readAt'])
      );
      // Suppression : Admin uniquement
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // ENTREPRISES & PROFESSIONS (RÉFÉRENTIELS)
    // ==========================================
    
    match /companies/{companyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /professions/{professionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ==========================================
    // COLLECTION CENTRALISÉE DES PAIEMENTS (PAYMENTS)
    // ==========================================
    // Historique centralisé de tous les versements
    // DONNÉES SENSIBLES - Accès restreint
    
    match /payments/{paymentId} {
      // LECTURE : Admins uniquement
      allow read: if isAdmin();
      
      // CRÉATION : Admins uniquement avec validation des champs requis
      allow create: if isAdmin() &&
        // Champs obligatoires présents
        request.resource.data.keys().hasAll([
          'date',
          'time',
          'mode',
          'amount',
          'acceptedBy',
          'paymentType',
          'sourceType',
          'sourceId',
          'recordedBy',
          'recordedByName',
          'recordedAt',
          'createdAt'
        ]) &&
        // Validation des types
        request.resource.data.amount is number &&
        request.resource.data.amount > 0 &&
        request.resource.data.mode is string &&
        request.resource.data.sourceType is string &&
        request.resource.data.sourceId is string &&
        request.resource.data.recordedBy is string &&
        request.resource.data.recordedByName is string &&
        // Date de versement doit être valide
        request.resource.data.date is timestamp &&
        // Date d'enregistrement doit être valide
        request.resource.data.recordedAt is timestamp;
      
      // MISE À JOUR : Admins uniquement (pour corrections mineures)
      allow update: if isAdmin() &&
        // Ne peut pas modifier les champs critiques
        request.resource.data.amount == resource.data.amount &&
        request.resource.data.mode == resource.data.mode &&
        request.resource.data.date == resource.data.date &&
        request.resource.data.sourceType == resource.data.sourceType &&
        request.resource.data.sourceId == resource.data.sourceId &&
        request.resource.data.recordedBy == resource.data.recordedBy;
      
      // SUPPRESSION : Admins uniquement
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // RÈGLE PAR DÉFAUT
    // ==========================================
    // Refuser tout accès non explicitement autorisé
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
